<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentNews"
        android:name="com.example.news.FragmentNews"
        android:label="News"
        tools:layout="@layout/fragment_news">

        <action
            android:id="@+id/action_fragmentNews_to_fragmentHome"
            app:destination="@+id/fragmentHome"/>
        <action
            android:id="@+id/action_fragmentNews_to_fragmentPrecaution"
            app:destination="@+id/fragmentPrecaution"/>
        <action
            android:id="@+id/action_fragmentNews_to_fragmentPost"
            app:destination="@+id/fragmentPost"/>
