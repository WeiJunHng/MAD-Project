            android:id="@+id/action_fragmentPrecaution_to_fragmentPost"
            app:destination="@+id/fragmentPost"/>
        <action
            android:id="@+id/action_fragmentPrecaution_to_fragmentProfile"
            app:destination="@+id/fragmentProfile"/>

    </fragment>

    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.example.news.FragmentHome"
