<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_background"
    android:outlineSpotShadowColor="#231919"
    tools:context=".ui.profile.SignOutDialog">

    <ImageButton
        android:id="@+id/BtnCloseIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_close_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVSignOutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/iceberg"
        android:text="You are signing out.\nAre you sure?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/BtnConfirmSignOut"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/iceberg"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_backgroundColor="#EEF6E1"
        app:neumorph_shadowColorDark="#C2CAB5"
        app:neumorph_shadowColorLight="#EBE9E8E8"
        app:neumorph_shadowElevation="3dp" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/BtnCancelSignOut"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/iceberg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_backgroundColor="#EEF6E1"
        app:neumorph_shadowColorDark="#C2CAB5"
        app:neumorph_shadowColorLight="#EBE9E8E8"
        app:neumorph_shadowElevation="3dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="465dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


