    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        app:boxCornerRadiusBottomStart="10sp"
        app:boxCornerRadiusBottomEnd="10sp"
        app:boxCornerRadiusTopEnd="10sp"
        app:boxCornerRadiusTopStart="10sp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="Gender">

        <AutoCompleteTextView
            android:id="@+id/ACTVGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:inputType="date"
            android:textSize="20sp"/>

    </com.google.android.material.textfield.TextInputLayout>
        
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        app:boxCornerRadiusBottomStart="10sp"
        app:boxCornerRadiusBottomEnd="10sp"
        app:boxCornerRadiusTopEnd="10sp"
        app:boxCornerRadiusTopStart="10sp"
        android:hint="Birthday">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ETBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:textSize="20sp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        app:boxCornerRadiusBottomStart="10sp"
        app:boxCornerRadiusBottomEnd="10sp"
        app:boxCornerRadiusTopEnd="10sp"
        app:boxCornerRadiusTopStart="10sp"
        android:hint="Contact">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ETContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textSize="20sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/BtnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20sp"
        android:layout_marginTop="20sp"
        app:neumorph_backgroundColor="#C1A0E7"
        app:neumorph_shadowColorLight="#EFEFEF"
        app:neumorph_shadowColorDark="#CAD3BB"
        app:neumorph_shadowElevation="3sp"
        android:text="@string/continue_text"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/BtnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20sp"
        app:neumorph_strokeColor="#C1A0E7"
        app:neumorph_strokeWidth="3sp"
        app:neumorph_shadowColorLight="#EFEFEF"
        app:neumorph_shadowColorDark="#CAD3BB"
        app:neumorph_shadowElevation="3sp"
        android:text="@string/back"
        android:textSize="25sp"
        android:textColor="#C1A0E7"
        android:textStyle="bold"
        android:translationY="-10sp"/>

