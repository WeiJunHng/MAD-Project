<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top-Left Light Shadow -->
    <item android:right="-5dp" android:bottom="-4dp">
        <shape>
            <!-- Light shadow color -->
            <solid android:color="#FBFFF4"/>
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>

    <!-- Bottom-Right Dark Shadow -->
    <item android:right="5dp" android:bottom="4dp">
        <shape>
            <solid android:color="#E6C8DAAC" /> <!-- Dark shadow with 90% opacity -->
            <size android:width="116dp" android:height="116dp" />
        </shape>
    </item>

    <!-- Button Background -->
    <item>
        <shape>
            <solid android:color="#EEF6E1"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>